% Get the year from the user
year = input('Please enter the year: ');

% Check if the year is a leap year or not
if rem(year, 4) == 0
    if rem(year, 100) == 0
        if rem(year, 400) == 0
            disp('The year is a leap year.');
        else
            disp('The year is not a leap year.');
        end
    else
        disp('The year is a leap year.');
    end
else
    disp('The year is not a leap year.');
end
